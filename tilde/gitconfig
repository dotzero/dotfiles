# git config -f ~/.gitlocal user.email "mail@dotzero.ru"
# git config -f ~/.gitlocal user.name "dotzero"
# git config -f ~/.gitlocal user.signingkey "AAE042B1"
[include]
    path = ~/.gitlocal
